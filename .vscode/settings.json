        // enable completion for "..."
        "\\\"([^\\\"\n\r]+)\\\"",
        // enable completion for #| ...
        "#\\|([^\n\r]+)",
        // enable completion for $| ...
        "\\$\\|([^\n\r]+)"
    ]
}